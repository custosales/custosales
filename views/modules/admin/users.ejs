<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <%- include('../../head') %>
</head>

<body>
    <%- include('../../menu') %>
        <main>
            <h1>
                <%= title %> <a href="newuser"><button class="btn btn-primary">Ny bruker</button></a>
            </h1>

            <table id="admin_users_table" class="table" style="width:80%">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Fornavn</th>
                        <th>Etternavn</th>
                        <th>Brukernavn</th>
                        <th>Epost</th>
                        <th>Mobil</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < rows.length; i++) { %>

                        <tr>
                            <td>
                                <%= rows[i].user_id %>
                            </td>
                            <td>
                                <%= rows[i].first_name %>
                            </td>
                            <td>
                                <%= rows[i].last_name %>
                            </td>
                            <td>
                                <%= rows[i].username %>
                            </td>

                            <td>
                                <a href="mailto:<%= rows[i].user_email %>">
                                    <%= rows[i].user_email %>
                                </a>
                            </td>
                            <td>
                                <%= rows[i].mobile_phone %>
                            </td>
                            <td>
                                <a href="edituser?user_id=<%= rows[i].user_id %>">Edit user</a>
                            </td>

                        </tr>

                        <% } %>
                </tbody>

            </table>


        </main>
</body>

</html>